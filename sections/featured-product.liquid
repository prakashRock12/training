
{% for product in collections.all.products limit:3 %}
<div>
    <h3>{{ product.title }}</h3>
    <img src="{{ product.featured_image.src | img_url:"poco" }}" alt="{{ product.featured_image.alt }}" />
    <p>{{ product.price | money_with_currency }}</p>
    <form action="/cart/add" method="post">
      <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
      <input type="submit" value="Add to Cart" />
    </form>
</div>
{% endfor %}

{% schema %}
{
  "name": "Featured product",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading text"
    },
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    }
  ],
  "presets": [
    {
      "name": "Featured product",
      "settings": {
        "heading": "Check out this product"
      }
    }
  ]
}
{% endschema %}
